# Increase the volume
XF86AudioRaiseVolume
    pactl set-sink-volume @DEFAULT_SINK@ +1%

# Decrease the volume
XF86AudioLowerVolume
    pactl set-sink-volume @DEFAULT_SINK@ -1%

# Toggle play/pause
XF86AudioPlay
    playerctl play-pause

# Mute the volume
XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle
